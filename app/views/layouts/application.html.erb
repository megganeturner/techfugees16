<!DOCTYPE html>
<html>
<head>
  <title>Techfugees 2016</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-controllers">
      <%= link_to (image_tag('covered_logo_only_white.png')), root_path, class: 'application-nav-logo' %>
      <%= link_to 'About', about_path %>
    </div>

    <div class="login-controllers">
      <% if logged_in? %>
        <%= link_to "Log Out #{@current_user.first_name}", logout_path, method: 'delete' %>
      <% else %>
        <%= link_to 'Sign In', login_path %>
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
    </div>
  </nav>



  <%= yield %>



</body>
</html>
